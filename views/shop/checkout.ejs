<%- include('../includes/header.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
</head>
<body>
<%- include('../includes/navigation.ejs') %>
<main>
    <ul class="cart__item__list">
        <% products.forEach(p => { %>
            <li class="cart__item">
                <h3 class="cart__item__title">Title : <%= p.productId.title %></h3>
                <h3 class="cart__item__quantity">Quantity: <%= p.quantity %></h3>
            </li>
        <% }) %>
    </ul>

    <div class="centered">
        <h2>Total : <%= totalSum %></h2>
    </div>

    <div class="centered">
        <button class="btn" id="order-btn">ORDER</button>
        <script src="https://js.stripe.com/v3/"></script>
        <script>
            var stripe = Stripe('pk_test_51NlB5AGMiqvxA792L3XZ1ATOLli8yJRZMGCpfIDDXSoKfdq7lpNzAPxpozYWkQEaaPOB0DlVXIBjnSqEAiJxhAU500InkcZdQe');
            var orderBtn = document.getElementById('order-btn')
            orderBtn.addEventListener('click', () => {
                stripe.redirectToCheckout({
                    sessionId: '<%= sessionId %>'
                })
            })
        </script>
    </div>
</main>
<%- include('../includes/end.ejs') %>